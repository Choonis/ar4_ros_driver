<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="ar_robot">
    <xacro:arg name="initial_positions_file" default="initial_positions.yaml" />

    <!-- Import ar_robot urdf file -->
    <xacro:include filename="$(find ar_description)/urdf/ar.urdf" />

    <!-- Import control_xacro -->
    <xacro:include filename="ar_robot.ros2_control.xacro" />


    <xacro:ar_robot_ros2_control name="FakeSystem" initial_positions_file="$(arg initial_positions_file)"/>

</robot>
